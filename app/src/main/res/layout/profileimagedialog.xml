<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:theme="@style/AppTheme"
    android:background="@color/backgroundColor">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="241dp"
            android:id="@+id/profileImageViewProfileDialog"
            android:layout_gravity="top|center"
            android:background="@drawable/button_style"
            android:src="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/playerNameText"
            android:id="@+id/playerNameTextViewprofileDialog"
            android:layout_gravity="left|bottom"
            android:textSize="35sp"
            android:inputType="textPersonName"
            android:hint="@string/enterName_hint"
            android:gravity="center" />
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        android:weightSum="1"
        android:id="@+id/linearLayout"
        android:layout_gravity="bottom|center_vertical">
        <!--android:layout_toRightOf="@+id/frameLayout"-->
        <!--android:layout_toEndOf="@+id/frameLayout"-->

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/overallWelathTextView"
            android:id="@+id/overAllWealthTextViewprofileDialog"
            android:layout_gravity="top"
            android:textColor="#ff8a54"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#143f1c"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/influenceTextView"
            android:id="@+id/influenceTextViewprofileDialog"
            android:textColor="@color/signatureColorOne"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="#3f0d13"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/getJob_text"
            android:id="@+id/jobTextViewprofileDialog"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/getCountry_text"
            android:id="@+id/countryTextViewprofileDialog"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/neighbourhoodTextView_text"
            android:id="@+id/neighbourhoodTextViewprofileDialog"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/getTax_text"
            android:id="@+id/taxTextViewprofileDialog"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/friendsTextView_text"
            android:id="@+id/userfriendsTextViewprofileDialog"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/professionalAssociatesTextView_text"
            android:id="@+id/professionalAssociatesTextViewprofileDialog"
            android:textSize="18sp"
            android:gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/worshippersTextView_text"
            android:id="@+id/worshippersTextViewprofileDialog"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/looksTextView_text"
            android:id="@+id/looksTextViewprofileDialog"
            android:textSize="18sp"
            android:gravity="center" />

    </LinearLayout>



</LinearLayout>