<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="192dp"
        android:background="@color/backgroundColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:text="@string/app_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textStyle="bold"
            android:textColor="@color/signatureColorOne"
            android:layout_gravity="top" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@drawable/border"
            android:layout_height="135dp"
            android:layout_gravity="bottom">

            <TextView
                android:text="Objectives"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/objectivesNavigationTextView"
                android:gravity="center"
                android:textColor="@color/signatureColorOne"
                android:textSize="30sp"
                android:background="@android:drawable/title_bar" />

            <TextView
                android:text="Wealth Goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/wealthGoalNavigationTextView"
                android:textColor="@color/signatureColorOne"
                android:textSize="20sp"
                android:background="?android:attr/panelFullBackground"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />

            <TextView
                android:text="Influence Goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/influenceGoalNavigationTextView"
                android:gravity="center"
                android:textColor="@color/signatureColorOne"
                android:textSize="20sp"
                android:background="?android:attr/panelFullBackground"
                android:paddingBottom="8dp"
                android:paddingTop="8dp" />
        </LinearLayout>

</FrameLayout>

