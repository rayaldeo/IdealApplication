<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <corners
        android:topLeftRadius="50dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="50dp"
        />


    <gradient
        android:angle="90"
        android:centerX="35%"
        android:centerColor="#3f3f3f"
        android:startColor="#3f1930"
        android:endColor="#ff8a54"
        android:type="linear"
        />
    <padding
        android:left="3dp"
        android:top="2dp"
        android:right="0dp"
        android:bottom="3dp"
        />
    <size
        android:width="100dp"
        android:height="30dp"
        />
    <stroke
        android:width="45dp"
        android:color="#ff8a54"
        />


</shape>

