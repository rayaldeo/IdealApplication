<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
                <!-- Customize your theme here. -->
                <item name="colorPrimary">@color/signatureColorOne</item>
                <item name="colorPrimaryDark">@color/purplebackground_color</item>
                <item name="colorAccent">@color/counter_text_bg</item>
                <item name="windowActionBar">false</item>
                <item name="windowNoTitle">true</item>
            <item name="android:textColor">@color/signatureColorOne</item>

        </style>


        <!--Splash Screen Theme-->
        <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
                <item name="colorPrimary">@color/purplebackground_color</item>
                <item name="colorAccent">@android:color/holo_orange_light</item>
        </style>



        <style  name = "CustomProgressBarHorizontal"  parent = "android:Widget.ProgressBar.Horizontal" >
                <item  name = "android:progressDrawable" > @drawable/health_progressbar_drawable </item >
                <item  name = "android:minHeight" > 10dip </item >
                <item  name = "android:maxHeight" > 30dip </item >
        </style >

        <style  name = "AlertDialogCutomTheme"  parent = "@android:style/Theme.Holo.Dialog" >
                <item name="colorPrimary">@color/signatureColorOne</item>
                <item name ="android:background" >@color/backgroundColor </item >
                <item name="android:textColor">@android:color/holo_orange_light</item>
                <item name="android:windowFullscreen">false</item>

        </style >

        <style  name = "InitDialogTheme" parent = "Theme.AppCompat.Dialog">
                <item name="windowNoTitle">true</item>
                <item name="colorPrimary">@color/purplebackground_color</item>
                <item name="colorAccent">@android:color/holo_orange_light</item>
        </style>


</resources>
